{ "extends": "eslint-config-airbnb",
  "env": {
    "browser": false,
    "node": false,
    "mocha": false
  },
  "rules": {
    "react/no-multi-comp": 0,
    "import/default": 0,
    "import/no-duplicates": 0,
    "import/named": 0,
    "import/namespace": 0,
    "import/no-unresolved": 0,
    "import/no-named-as-default": 0,
    "comma-dangle": 0,  // not sure why airbnb turned this on. gross!
    "no-console": 0,
    "no-alert": 0,
    //逗号空格
    "comma-spacing":0,
    //缩进
    "indent": [0,2],
    //最后一行回车
    "eol-last":0,
    //行内注释
    "spaced-comment":0,
    //分号
    "semi":0,
    //单引号
    "quotes":[0,"single"],
    //key value 间空格
    "key-spacing":0,
    //引用的变量未使用
    "no-unused-vars":1,
    //react标签闭合
    "react/self-closing-comp":0,
    //花括号前空格
    "space-before-blocks":0,
    //prop验证
    "react/prop-types":0,
    "space-after-keywords":0,
    //运算符号间空格
    "space-infix-ops":0,
    "no-multi-spaces":0,
    "no-trailing-spaces":0,
    "react/wrap-multilines":0,
    //块级元素 空白行开头
    "padded-blocks":0,
    //变量名必须是驼峰命名
    "camelcase":0,
    //return 后面必须加空格
    "space-return-throw-case":0,
    //括号必须对齐
    "brace-style":0,
    "react/sort-comp":0,
    "no-shadow":0,
    //两行回车
    "no-multiple-empty-lines":0,
    //变量名大于2个字符
    "id-length":0,
    "no-inner-declarations":0
  },
  "plugins": [
    "react", "import"
  ],
  "settings": {
    "import/parser": "babel-eslint",
    "import/resolve": {
      "moduleDirectory": ["node_modules", "src"]
    }
  },
  "globals": {
    "__DEVELOPMENT__": true,
    "__CLIENT__": true,
    "__SERVER__": true,
    "__DISABLE_SSR__": true,
    "__DEVTOOLS__": true,
    "socket": false,
    "webpackIsomorphicTools": true
  }
}
